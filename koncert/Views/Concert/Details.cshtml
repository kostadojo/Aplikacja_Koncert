@model Concert

<h3 class="my-5">
    @Model.Name
</h3>

<div class="row gx-5">
    <img alt="@Model.Name" src="@Model.ImageUrl" class="img-fluid col-5" />
    <div class="col-7">

        <p>@Model.Artist</p>
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-secondary" 
                asp-controller="ShoppingCart" 
                asp-action="AddToShoppingCart" 
                asp-route-concertId="@Model.ConcertId">
                    Dodaj do zamówienia
                </a>
            </p>
        </div>
    </div>
</div>
<br />
<div class="container">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#tab1">Opis wydarzenia</a>
        </li>
    </ul>
</div>
    <div class="tab-content">
        <div class="tab-pane fade show active" id="tab1">
            <div class="accordion" id="description">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Opis wydarzenia
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#description">
                        <div class="accordion-body">
                            <ul>
                                @foreach (var noteOneDescription in Model.Description.NoteOneDescription!)
                                {
                                    <li>
                                        @noteOneDescription.Content
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Sprzedaż
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#description">
                        <div class="accordion-body">
                            <ul>
                                @foreach (var noteTwoSell in Model.Description.NoteTwoSell!)
                                {
                                    <li>
                                        @noteTwoSell.Content
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Informacje dodatkowe
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#description">
                        <div class="accordion-body">
                            <ul>
                                @foreach (var noteThreeOther in Model.Description.NoteThreeOther!)
                                {
                                    <li>
                                        @noteThreeOther.Content
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="tab2">
           
        </div>
        <div class="tab-pane fade" id="tab3">
            <br />

        </div>
        <div class="tab-pane fade" id="tab4">
            <br />
        </div>
</div>
